@{
    ViewBag.Title = "Formulario de Usuarios";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulario Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
        background-color: #fce4ec;
        font-family: 'Arial', sans-serif;
        padding: 40px;
        }

        .form-container {
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
        margin-bottom: 40px;
        }

        .form-label {
        font-weight: bold;
        color: #d81b60;
        }

        .form-control {
        border-radius: 8px;
        border: 1px solid #ec407a;
        margin-bottom: 15px;
        }

        .btn-pink {
        background-color: #ec407a;
        color: white;
        width: 100%;
        padding: 10px;
        font-weight: bold;
        border: none;
        border-radius: 30px;
        transition: background-color 0.3s ease;
        }

        .btn-pink:hover {
        background-color: #d81b60;
        color: #ffebee;
        }

        .table-container {
        max-width: 800px;
        margin: auto;
        }

        table {
        width: 100%;
        border-collapse: collapse;
        }

        table th,
        table td {
        padding: 12px;
        border: 1px solid #ec407a;
        text-align: center;
        }

        table th {
        background-color: #f8bbd0;
        color: #880e4f;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <form asp-controller="Usuario" asp-action="ForMethod" method="get">
            <div class="form-group">
                <label class="form-label">Username:</label>
                <input type="text" name="username" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Password:</label>
                <input type="password" name="password" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Email:</label>
                <input type="text" name="email" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Name:</label>
                <input type="text" name="name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Fecha Nacimiento:</label>
                <input type="text" name="fechanacimiento" class="form-control" placeholder="DD/MM/AAAA" />
            </div>

            <button type="submit" class="btn btn-pink">Cargar y obtener Usuarios</button>
        </form>
    </div>

    @if (ViewBag.ListaUsuario != null)
    {
        <div class="table-container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Fecha de Nacimiento</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in ViewBag.ListaUsuario)
                    {
                        <tr>
                            <td>@usuario.id</td>
                            <td>@usuario.username</td>
                            <td>@usuario.email</td>
                            <td>@usuario.name</td>
                            <td>@usuario.fechanacimiento</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</body>
</html>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center mt-4" style="background-color: #f8bbd0; color: #880e4f; border: 1px solid #ec407a; border-radius: 10px; font-weight: bold;">
        <h5>⚠️ Error de autenticación</h5>
        <p>@ViewBag.Error</p>
    </div>
}